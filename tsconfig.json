{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "umd",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "build/",
		"pretty": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"types":[
			"intern"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
